<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/header', headertitle="Blog Page") %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mt-3">
      <div class="col">
        <h1 class="h3 mt-3">Blog Page</h1>

        <% blogs.forEach(blog => { %>
        <div class="card mb-3">
          <div class="row">
            <div class="col-md-3">
              <img src="<%= blog.image %>" alt="" class="img-fluid" />
            </div>
            <div class="col-md-9">
              <div class="card-body">
                <h5 class="card-title"><%= blog.title %></h5>
                <p class="card-text"><%= blog.description %></p>
              </div>
            </div>
          </div>
        </div>
        <% }) %> <%- include('../partials/pagination') %>
      </div>
    </div>
  </body>
</html>
